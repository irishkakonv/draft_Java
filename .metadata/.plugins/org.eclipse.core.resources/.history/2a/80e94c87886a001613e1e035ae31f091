package NIIT;


interface Action{
	 void act();
}
//
//abstract class ActionAdapter implements Action{
//	 public void act(){System.out.println("Default act() impl");}
//	 public void act1(){System.out.println("Default act1() impl");}
//	 public void act2(){System.out.println("Default act2() impl");}
//	 public void act3(){System.out.println("Default act3() impl");}
//	 public void act4(){System.out.println("Default act4() impl");}
//}

class A implements Action{
	@Override
	public void act() {
		System.out.println("class A act() impl");
	}
}


public class Main1 {

	public static void main(String[] args) {
		Action a = new A();
		a.act();
		handleAction(a);
		
		handleAction(()->{
			System.out.println("Anonim");
		});
		
		Action l1 = () ->{System.out.println("l1 act() impl");};
		Action l2 = () ->{System.out.println("l2 act() impl");};
		Action l3 = () ->{System.out.println("l3 act() impl");};
		
		for (int i = 0; i < 3; i++) {
			Action impl = null;
			if(i == 0){
				impl = l1;
			}
			else{
				if (i == 1) {
					impl = l2;
				}
				else {
					impl = l3;
				}
		}
		}
//		handleAction(new Action() {
//			
//			
//			@Override
//			public void act() {
//				System.out.println();
//				
//			}
//		});

	}
	public static void handleAction(Action action) {
		action.act(); 
	}
}



